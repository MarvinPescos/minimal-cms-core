# ===========================================
# Minimal CMS Backend - Environment Variables
# ===========================================
# Copy this file to .env and fill in your values
# cp .env.example .env

# -------------------------------------------
# Database Configuration (PostgreSQL)
# -------------------------------------------
DB_NAME=your_database_name
DB_USER=your_database_user
DB_PASS=your_database_password
DB_HOST=localhost
DB_PORT=5432

# Connection URLs (auto-built from above, or set directly for production)
DB_URL=postgresql+asyncpg://${DB_USER}:${DB_PASS}@${DB_HOST}:${DB_PORT}/${DB_NAME}
TEST_DB_URL=postgresql+asyncpg://${DB_USER}:${DB_PASS}@localhost:5432/${DB_NAME}_test

# -------------------------------------------
# Supabase Configuration
# -------------------------------------------
# Get these from: Supabase Dashboard → Project Settings → API
SUPABASE_URL=https://your-project-id.supabase.co
SUPABASE_ANON_KEY=your-anon-key-here
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key-here

# -------------------------------------------
# Redis Configuration
# -------------------------------------------
# Local: redis://localhost:6379
# Upstash: rediss://default:token@your-endpoint.upstash.io:6379
REDIS_URL=redis://localhost:6379

# -------------------------------------------
# Docker Configuration
# -------------------------------------------
COMPOSE_PROJECT_NAME=minimal_cms

# -------------------------------------------
# Application Settings
# -------------------------------------------
DEBUG=true
ENVIRONMENT=development

# CORS - Comma-separated list of allowed origins
CORS_ORIGINS=["http://localhost:3000","http://localhost:5173"]

# API Versioning (optional - not currently implemented)
# API_V1_PREFIX=/api/v1

# -------------------------------------------
# Security Configuration
# -------------------------------------------
ACCESS_TOKEN_EXPIRE_MINUTES=60
